{% extends 'IasGameBundle::base.html.twig' %}



{% block body %}
    <script>
        var $ias_scope = {
            game_id: {{ game }}
        };
    </script>

    <div class="container">
        <div class="row">
            <div class="col-sm-10">

                {{ storage.getResources()|raw }}
            </div>
            <div class="col-sm-2">
                <div class="text-center">
                    {% if step %}
                        <h3>Ваш ход</h3>
                    {% else %}
                        <h3>Ход соперника</h3>
                    {% endif %}
                </div>
                <a href="#" role="button" class="btn btn-success btn-block btn-raised" id="play_step">Отправить ход</a>
                <a href="#" role="button" class="btn btn-info btn-block btn-raised" id="play_update">Обновить</a>
            </div>
        </div>
    </div>
{% endblock %}

   {% block javascript %}
       {{ parent() }}
       <script src="{{ asset('/bundles/iasgame/js/play.js') }}"></script>
   {% endblock %}


