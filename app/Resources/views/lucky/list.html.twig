{% extends 'base.html.twig' %}

<script src="{{ asset('/bundles/app/vendor/js/jquery-2.1.1.min.js') }}"></script>


{% block body %}
    <h3>Список чисел:</h3>
    <ul>
        {% for number in array %}
            {% if number%2==0 %}
                <li style="color: red;">{{ number }}</li>
            {% else %}
                <li style="color: green;">{{ number }}</li>
            {% endif %}
        {% endfor %}
    </ul>

{% endblock %}